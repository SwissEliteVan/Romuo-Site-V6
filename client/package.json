{
  "name": "romuo-vtc-client",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Site vitrine ROMUO VTC - Transport premium en Suisse",
  "author": "ROMUO VTC",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "audit": "npm audit --production",
    "audit:fix": "npm audit fix",
    "clean": "rm -rf dist node_modules .vite",
    "clean:install": "npm run clean && npm install",
    "test": "echo 'No tests configured yet'",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "generate:icons": "node scripts/generate-pwa-icons.cjs",
    "generate:screenshots": "node scripts/generate-screenshots.cjs",
    "generate:pwa": "npm run generate:icons && npm run generate:screenshots",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist",
    "deploy:vercel": "npm run build && vercel --prod"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "wouter": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.2.4",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-pwa": "^0.17.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
